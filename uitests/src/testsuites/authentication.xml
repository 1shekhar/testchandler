<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="V2 Regression Tests">

    <listeners>
        <listener class-name="listeners.RetryAnnotationTransformer"/>
    </listeners>
    <test name="Configure Execution">
        <classes>
            <class name="config.BeginTestExecution"/>
        </classes>
    </test>
    <test name="Authentication Sanity">
        <classes>
            <class name="signin.EmboldSignInWithGitHub"/>
            <class name="signout.EmboldSignOut"/>
            <class name="signin.EmboldSignInWithBitbucket"/>
            <class name="signout.EmboldSignOut"/>
        </classes>
    </test>
    <test name="Terminate Execution">
        <classes>
            <class name="config.EndTestExecution"/>
        </classes>
    </test>
</suite>